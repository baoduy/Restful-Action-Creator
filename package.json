{
  "name": "restful-action-creator",
  "version": "0.0.4",
  "description": "The helper lib to create the Restful commonicator for SPA.",
  "main": "lib/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "git-jest": "git submodule update --init --remote configs/jest",
    "clean": "rimraf -f -rmdir lib",
    "build-types": "tsc",
    "build-js": "babel src --out-dir lib --extensions \".ts,.tsx\"",
    "build": "npm-run-all clean build-types build-js",
    "publish:dist": "npm publish lib",
    "publish:whole": "npm publish .",
    "publish:all": "npm-run-all build publish:whole",
    "codecov": "codecov -t 48afb0d5-3dd1-4c5e-b761-23abbfdf9aba",
    "test-bundle": "bundlesize",
    "test": "jest --watch --coverage --config=configs/jest/ts.jest.json",
    "test-ci": "jest --ci --coverage --config=configs/jest/ts.jest.json && npm run codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baoduy/Restful-Action-Creator.git"
  },
  "keywords": [
    "Restful",
    "API",
    "Action Creator",
    "Web Api"
  ],
  "author": "Duy Hoang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/baoduy/Restful-Action-Creator/issues"
  },
  "homepage": "https://github.com/baoduy/Restful-Action-Creator#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "latest",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.10.3",
    "@types/url-join": "^0.8.2",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "axios": "^0.18.0",
    "bundlesize": "^0.17.0",
    "url-join": "^4.0.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/tests/__coverage__/",
    "collectCoverage": true
  },
  "bundlesize": [
    {
      "path": "./dist/*.*",
      "compression": "gzip",
      "maxSize": "500 B"
    },
    {
      "path": "./dist/*.*",
      "compression": "none",
      "maxSize": "2 kB"
    }
  ]
}
