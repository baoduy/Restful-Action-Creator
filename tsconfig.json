{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "esnext", "dom"],
    //"sourceMap": true,
    //"allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "strict": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    //"tests",
    "configs",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "sample"
  ]
}
